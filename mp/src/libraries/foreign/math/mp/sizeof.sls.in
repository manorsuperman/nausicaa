(define sizeof-mpc_rnd_t	@SIZEOF_MPC_RND_T@)
(define sizeof-mpf_t		@SIZEOF_MPF_T@)
(define sizeof-mpfi_t		@SIZEOF_MPFI_T@)
(define sizeof-mpfr_prec_t	@SIZEOF_MPFR_PREC_T@)
(define sizeof-mpfr_rnd_t	@SIZEOF_MPFR_RND_T@)
