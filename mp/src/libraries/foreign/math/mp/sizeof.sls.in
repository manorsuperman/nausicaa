    mpfr_rnd_t
    mpfr_sign_t

    mp_exp_t*
    mp_prec_t*
    mpc_ptr
    mpc_srcptr
    mpc_t
    mpf_ptr
    mpf_srcptr
    mpf_t
    mpfi_ptr
    mpfi_srcptr
    mpfi_t
    mpfr_ptr
    mpfr_srcptr
    mpfr_t
    mpq_ptr
    mpq_srcptr
    mpz_ptr
    mpz_srcptr

    ;; size of types
    sizeof-gmp_randalg_t
    sizeof-gmp_randstate_t
    sizeof-mp_exp_t
    sizeof-mp_limb_t
    sizeof-mp_size_t
    sizeof-mpc_t
    sizeof-mpf_t
    sizeof-mpfi_t
    sizeof-mpfr_prec_t
    sizeof-mpfr_rnd_t
    sizeof-mpfr_sign_t
