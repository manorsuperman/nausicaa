    MPFR_EMIN_DEFAULT
    MPFR_PREC_MAX
    MPFR_PREC_MIN
    MPFR_VERSION

    ;; accessors
    struct-mpfr-prec-set!		struct-mpfr-prec-ref
    struct-mpfr-sign-set!		struct-mpfr-sign-ref
    struct-mpfr-exp-set!		struct-mpfr-exp-ref
