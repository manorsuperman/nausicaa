if test -z "${PETITE_LIBPATH}" ; then
    export PETITE_LIBPATH=/usr/local/lib/scheme
fi

PETITE='__PETITE__'

exec "${PETITE}" \
    --libexts .petite.sls:.sls          \
    --libdirs "${PETITE_LIBPATH}"       \
    --program "$@"

### end of file
# Local Variables:
# mode: sh
# End:
